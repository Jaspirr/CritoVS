@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

 <section class="features">
      <div class="container">
        <div class="section-border">
          <div class="feature-grid">
            <div class="feature-text">
              <div class="small-title">@Model.Value("serviceFeaturesSectionTitle")</div>
              <h2 class="main-title">@Model.Value("serviceFeaturesHeading")</h2>
              <a href="@Model.Value("showcaseButtonUrl")" class="btn-theme-wide">@Model.Value("showcaseButtonText")&nbsp;<i class="fa-solid fa-arrow-up-right"></i></a>
            </div>  
        <div class="feature-cards">
            @Html.GetBlockListHtml(Model.ServiceFeatures)
        </div>
      </div>
</section>