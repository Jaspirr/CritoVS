@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Models

 <section class="about-company">
    <div class="container">
        <div class="about-container">
            <!-- Left Side -->
            <div class="image-sam">
               @{
                    var aboutImageUrl = Model.Value<MediaWithCrops>("aboutImageUrl");
                    if (aboutImageUrl != null)
                    {
                        <img class="samantha" src="@aboutImageUrl.MediaUrl()" alt="">
                    }
                }
              <div class="founder-info">
                <h3 class="founder-name">@Model.Value("aboutRoleName"), <span class="founder-title">@Model.Value("aboutRoleTitle")</span></h3>
                <p class="founder-description">@Model.Value("aboutRoleUnderText")</p>
              </div>
            </div>
            <!-- Right Side -->
            <div class="text-content">
              <span class="small-title">@Model.Value("aboutHeaderTitle")</span>
              <h3 class="about-title">@Model.Value("aboutMainTitle")</h3>
                <h2 class="text-main">@Model.Value("aboutSubText")</h2>
                <h2 class="text-sub">@Model.Value("aboutSubText2")</h2>
              <div class="action-buttons">
                <a href="@Model.Value("aboutButtonUrl")" class="btn-theme-black">@Model.Value("aboutButtonText") &nbsp;<i class="fa-solid fa-arrow-up-right"></i></a>
                <a href="@Model.Value("aboutVideoButtonUrl")" class="btn-theme-play"><i class="fa-solid fa-play"></i></a>
                <span>@Model.Value("aboutVideoButtonText")</span>
              </div>
            </div>
        </div>
    </div>
</section>